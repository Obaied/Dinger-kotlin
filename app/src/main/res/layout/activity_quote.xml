<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context=".ui.quote.QuoteActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/quote_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </android.support.design.widget.AppBarLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <RelativeLayout
            android:id="@+id/quote_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">

            <ImageView
                android:id="@+id/quote_imageview_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/quote_imageview_shade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/transparent_black"
                />

            <TextView
                android:id="@+id/quote_textview_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:autoSizeTextType="uniform"
                android:gravity="start"
                android:paddingBottom="46dp"
                android:paddingEnd="46dp"
                android:paddingStart="32dp"
                android:paddingTop="46dp"
                android:text="contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old. Richard McClintock, a Latin professor at Hampden-Sydney "
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/quote_textview_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:autoSizeTextType="uniform"
                android:gravity="start"
                android:paddingBottom="12dp"
                android:paddingEnd="24dp"
                android:paddingStart="12dp"
                android:text="Hemingway"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="italic"/>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>


    <!--<android.support.design.widget.FloatingActionButton-->
    <!--android:id="@+id/quote_fap"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:clickable="true"-->
    <!--app:layout_anchor="@id/quote_appbar"-->
    <!--app:layout_anchorGravity="bottom|right|end"-->
    <!--app:srcCompat="@android:drawable/presence_video_online"/>-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/quote_fap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/main_margin_fap"
        android:src="@android:drawable/ic_menu_share"
        app:fabSize="auto"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>
